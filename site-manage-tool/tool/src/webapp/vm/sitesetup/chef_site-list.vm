<script type="text/javascript">

    $(document).ready(function() {
    	var completeUrl = '$statusRequestUrl';
     var workingText = '$workingText';
    	$('#testholder').text(completeUrl + workingText);
      	$('#dialog').jqm({modal:true}); 
	        jQuery.get(completeUrl, function(data){
			    if (data.indexOf(workingText) >= 0) {
					$('#dialog').jqmShow(); 
	            }
	            else {
					$('#dialog').jqmHide(); 
	           }
	        });
	 function trim(testString)
	 {
	 	return testString.replace(/^\s*/, "").replace(/\s*$/, "");
	 }
		function checkStatus(){
			var thisStatus = this;
			var workingText = trim('$workingText');
			this.queryStatus = function(){
	        	jQuery.get(completeUrl, function(data){
			    	if (data.indexOf(workingText) >= 0) {
						$('#dialog').jqmShow(); 
		            }
		            else {
						$('#dialog').jqmHide(); 
					    window.clearInterval(this.intTimer);
	           		}
	
		        });
	  		}
			this.intTimer = window.setInterval(function(e) {  
	    		thisStatus.queryStatus()},3000)
	  		}
			checkStatus();		
    	});
</script>
