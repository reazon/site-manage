<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
          
<hibernate-mapping package="org.sakaiproject.sitemanage.impl">
	<class name="SiteSetupQuestionImpl"
		table="SSQ_QUESTION">
		
		<id name="id" type="long" column="ID">
	    	<generator class="native">
                <param name="sequence">SSQ_QUESTION_ID_SEQ</param>
	    	</generator>
		</id>
		
		<property name="question" type="string" not-null="false">
            <column name="QUESTION"/>
        </property>
        
        <property name="siteTypeId" type="long" not-null="false">
            <column name="SITETYPE_ID"/>
        </property>
        
        <property name="required" type="boolean" not-null="true">
            <column name="REQUIRED"/>
        </property>
        
        <property name="isMultiAnswers" type="boolean" not-null="true">
            <column name="MULTI_ANSWERS"/>
        </property>
        
        <list name="answers" cascade="all-delete-orphan" inverse="false"
			lazy="true">
			<key column="id" />
			<one-to-many class="SiteSetupQuestionAnswerImpl" />
		</list>
		
		<many-to-one name="siteTypeId" column="SITETYPE_ID"
			class="SiteTypeQuestionsImpl" index="SSQ_QUESTION_SITETYPE_I" lazy="false" />
    </class>
</hibernate-mapping>