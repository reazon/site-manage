<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  <bean id="siteId" factory-bean="sakai-Placement"
    factory-method="getContext" />

  <bean id="GroupListProducer"
      class="org.sakaiproject.site.tool.helper.managegroup.rsf.GroupListProducer">
    <property name="handler" ref="SiteManageGroupHandler" />
    <property name="messageLocator" ref="messageLocator"/>
    <property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager"/>
    <property name="frameAdjustingProducer" ref="frameAdjustingProducer"/>
  </bean>
  
   <!-- rich text evolver bean def -->
   <bean id="sakaiFCKTextEvolver2"
   	class="org.sakaiproject.poll.tool.evolvers.SakaiFCKTextEvolver">
   	<property name="contentHostingService"
   		ref="org.sakaiproject.content.api.ContentHostingService" />
   	<property name="context" ref="sakai-Context" />
   </bean>

   <!-- rich text evolver bean def -->
   <bean id="richTextEvolver" parent="sakaiFCKTextEvolver2" />
   
  <bean id="GroupEditProdcuer" 
      class="org.sakaiproject.site.tool.helper.managegroup.rsf.GroupEditProducer">
    <property name="handler" ref="SiteManageGroupHandler" />
    <property name="messageLocator" ref="messageLocator"/>
  </bean>

  <bean id="GroupDelProdcuer" 
      class="org.sakaiproject.site.tool.helper.managegroup.rsf.GroupDelProducer">
    <property name="handler" ref="SiteManageGroupHandler" />
    <property name="messageLocator" ref="messageLocator"/>
  </bean>

  <bean id="SiteManageGroupHandler" init-method="init"
      class="org.sakaiproject.site.tool.helper.managegroup.impl.SiteManageGroupHandler">
    <property name="siteService" ref="org.sakaiproject.site.api.SiteService" />
    <property name="toolManager" ref="org.sakaiproject.tool.api.ToolManager" />
    <property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager" />
    <property name="serverConfigurationService" ref="org.sakaiproject.component.api.ServerConfigurationService" />
  </bean>
</beans>
